# Настройки базы данных PostgreSQL
DB_NAME=lovi_moment
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# Email настройки для отправки заявок
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
RECIPIENT_EMAIL=recipient@example.com

# Порт сервера
PORT=3000

# Секретный ключ для сессий (ОБЯЗАТЕЛЬНО измените на случайную строку!)
SESSION_SECRET=change-this-to-random-string-in-production

# Автоматическая синхронизация БД при запуске (опционально)
AUTO_SYNC_DB=false
SYNC_ALTER=false

# Окружение (development/production)
NODE_ENV=production
